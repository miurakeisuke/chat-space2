.chat-main__content{ "data-message-id": message.id }
  .chat-main__content__name
    = message.user.name
  .chat-main__content__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__content__message
    - if message.body.present?
      %p.chat-main__content__message__word
        = message.body
    = image_tag message.image, class: 'message__image' if message.image.present?

